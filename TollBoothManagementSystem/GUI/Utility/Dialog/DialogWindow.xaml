<Window x:Class="TollBoothManagementSystem.GUI.Utility.Dialog.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TollBoothManagementSystem.GUI.Utility.Dialog"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Height="{Binding WindowHeight, Mode=TwoWay}"
        Width="{Binding WindowWidth, Mode=TwoWay}"
        Title="{Binding Title}">
    <Grid>
        <ContentControl Width="{Binding ContentWidth, Mode=OneWay}"
                        Height="{Binding ContentHeight, Mode=OneWay}"
                        x:Name="ContentPresenter" Content="{Binding}" />
    </Grid>
</Window>
